#!/usr/bin/env bash
# This script starts, stops, or restarts the manage_my_process.sh script.

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="./manage_my_process.sh"

case "$1" in
    start)
        echo "Starting manage_my_process..."
        nohup $PROCESS_SCRIPT > /dev/null 2>&1 &
        echo $! > $PID_FILE
        echo "manage_my_process started"
        ;;
    stop)
        echo "Stopping manage_my_process..."
        if [ -f $PID_FILE ]; then
            kill "$(cat $PID_FILE)"
            rm -f $PID_FILE
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        echo "Restarting manage_my_process..."
        $0 stop
        $0 start
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
