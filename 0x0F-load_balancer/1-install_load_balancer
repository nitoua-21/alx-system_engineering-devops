#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.
# Configure HAproxy so that it send traffic to web-01 and web-02
# Distribute requests using a roundrobin algorithm

CFG="\\\nlisten appname 0.0.0.0:80\n\tmode http\n\tbalance roundrobin\n\toption httpclose\n\toption forwardfor\n\tserver 117202-web-01 52.91.150.244 check\n\tserver 117202-web-02 54.174.121.226 check\n"

apt-get update
apt-get -y install nginx
apt-get install -y haproxy

# Make sure HAproxy can be managed via an init script
sed -i "s/ENABLED=0/ENABLED=1/" /etc/default/haproxy

# Backup original config file before attempt modifications
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

# Configure to include roundrobin and two servers
sed -i "\$a $CFG" /etc/haproxy/haproxy.cfg
